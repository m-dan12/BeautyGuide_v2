<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BeautyGuide_v2.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BeautyGuide_v2.Views.SalonView"
             x:DataType="vm:SalonViewModel">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Name}" FontSize="18" />
        <TextBlock Text="{Binding Description}" Margin="0,10,0,0" />
        <TextBlock Text="{Binding PhoneNumber}" Margin="0,10,0,0" />
        <TextBlock Text="{Binding Address}" Margin="0,10,0,0" />
        <Button Content="Назад" Command="{Binding GoBackCommand}" Margin="0,10,0,0" />
    </StackPanel>
</UserControl>
